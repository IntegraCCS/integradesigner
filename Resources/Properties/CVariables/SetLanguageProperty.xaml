<UserControl x:Class="IntegraDesigner.Resources.Properties.SetLanguageProperty"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="auto" Width="auto">
    <StackPanel>
            <StackPanel Orientation="Horizontal">
            <Label Canvas.Left="0" Canvas.Top="30" Height="25" Name="lbllang" Width="75" >Language:</Label>
            <ComboBox Canvas.Left="79" Canvas.Top="59" Height="23" Name="txtlang" Width="46" >
                <ComboBoxItem>es</ComboBoxItem>
                <ComboBoxItem>en</ComboBoxItem>
                <ComboBoxItem>pt</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Description:"></TextBlock>
            <TextBox x:Name="txtdesc" Width="624" Margin="10,0,0,0"></TextBox>
        </StackPanel>

    </StackPanel>
</UserControl>
